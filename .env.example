# Database (Supabase)
# Transaction Mode (Port 6543)
DATABASE_URL="postgresql://postgres.[ref]:[pass]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Session Mode (Port 5432)
DIRECT_URL="postgresql://postgres.[ref]:[pass]@aws-0-us-east-1.supabase.co:5432/postgres"

# Auth
JWT_SECRET="your-super-long-random-secret"

# Email (SMTP) - REQUIRED for verification emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
# If using Gmail, this is your "App Password" (generated in Google Account > Security > 2-Step Verification > App Passwords)
# It is NOT your regular login password.
SMTP_PASS="your-16-char-app-password" 
SMTP_FROM="ExaminePro <no-reply@examinepro.com>"

# App Public URL (for links in emails)
APP_URL="http://localhost:3000"
