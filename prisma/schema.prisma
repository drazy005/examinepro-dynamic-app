// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  CANDIDATE
  ADMIN
  SUPERADMIN
}

enum QuestionType {
  MCQ
  SBA
  THEORY
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum ResultRelease {
  INSTANT
  DELAYED
}

enum GradingStatus {
  UNGRADED
  PENDING_MANUAL_REVIEW
  GRADED
  REVIEWED
}

enum ResultReleaseMode {
  MANUAL
  SCHEDULED
  INSTANT
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String
  name          String
  role          UserRole  @default(CANDIDATE)
  isVerified    Boolean   @default(false)
  verificationToken String?
  resetToken       String?
  resetTokenExpiry DateTime?
  googleId         String?   @unique
  avatarUrl        String?
  
  createdAt     DateTime  @default(now())
  lastActive    DateTime  @updatedAt

  submissions   Submission[]
  auditLogs     AuditLog[]
  blogPosts     BlogPost[]
  
  // Ownership Relations
  authoredExams         Exam[]     @relation("ExamAuthor")
  collaboratingExams    Exam[]     @relation("ExamCollaborators")
  authoredQuestions     Question[] @relation("QuestionAuthor")
  collaboratingQuestions Question[] @relation("QuestionCollaborators")
}

model Exam {
  id              String        @id @default(uuid())
  title           String
  description     String?
  category        String        @default("General")
  difficulty      Difficulty    @default(MEDIUM)
  durationMinutes Int           @default(30)
  warningTimeThreshold Int?     @default(5)
  resultReleaseMode ResultReleaseMode @default(MANUAL)
  scheduledReleaseDate DateTime?
  showMcqScoreImmediately Boolean @default(false)
  passMark        Float         @default(50)
  totalPoints     Float         @default(0)
  published       Boolean       @default(false)
  version         Int           @default(1)
  resultRelease   ResultRelease @default(INSTANT)
  reviewed        Boolean       @default(false)
  resourceLink    String?       // Companion material link
  
  // JSON settings for flexibility (Timer, Grading Policy)
  timerSettings   Json
  gradingPolicy   Json
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  questions       Question[]    @relation("ExamQuestions")
  submissions     Submission[]
  
  // Ownership
  author          User?         @relation("ExamAuthor", fields: [authorId], references: [id])
  authorId        String?
  collaborators   User[]        @relation("ExamCollaborators")
}

model Question {
  id              String       @id @default(uuid())
  type            QuestionType @default(MCQ)
  text            String
  options         String[]
  correctAnswer   String
  points          Float        @default(1)
  imageUrl        String?
  category        String?
  batchId         String?      // For organizing bulk imports
  
  createdAt       DateTime     @default(now())

  // Relationships
  exams         Exam[]       @relation("ExamQuestions")
  author        User?        @relation("QuestionAuthor", fields: [authorId], references: [id])
  authorId      String?
  collaborators User[]       @relation("QuestionCollaborators")
}

model Submission {
  id                    String        @id @default(uuid())
  examId                String
  userId                String
  
  answers               Json          // Map of questionId -> answer
  answersDraft          Json?         // Auto-saved draft answers
  questionResults       Json          // Map of questionId -> result detail
  
  score                 Float         @default(0)
  status                GradingStatus @default(UNGRADED)
  graded                Boolean       @default(false)
  resultsReleased       Boolean       @default(false)
  
  submittedAt           DateTime      @default(now())
  timeSpentMs           Int           @default(0)
  
  reviewedAt            DateTime?
  reviewedBy            String?

  user                  User          @relation(fields: [userId], references: [id])
  exam                  Exam          @relation(fields: [examId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  action    String
  details   String
  ipAddress String?
  timestamp DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

model BlogPost {
  id          String   @id @default(uuid())
  title       String
  content     String
  authorId    String
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author      User     @relation(fields: [authorId], references: [id])
}

model SystemSettings {
  key   String @id
  value String
}

model RateLimit {
  key       String   @id
  points    Int      @default(0)
  expireAt  DateTime
}
